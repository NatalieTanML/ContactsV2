<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.natalietan.contactsv2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="Contacts"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.AddContact"
            android:parentActivityName=".ui.MainActivity"
            android:label="Add new contact"/>

        <activity
            android:name=".ui.UpdateContact"
            android:parentActivityName=".ui.MainActivity"
            android:label="Update contact"/>

        <activity
            android:name=".ui.ViewSingleContact"
            android:parentActivityName=".ui.MainActivity"
            android:label="View contact"/>

    </application>

</manifest>